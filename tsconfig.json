{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs", 
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "types": ["node",]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
  